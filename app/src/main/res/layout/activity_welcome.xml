<?xml version="1.0" encoding="utf-8"?>
<layout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_resource_welcome_screen"
        android:padding="@dimen/_20sdp"
        tools:context=".view.WelcomeActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_login"
            android:layout_marginBottom="@dimen/_30sdp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TestMe"
                android:textColor="@color/white"
                android:textSize="@dimen/_45sdp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner"
                android:gravity="center"
                android:paddingLeft="@dimen/_24sdp"
                android:paddingTop="@dimen/_4sdp"
                android:paddingRight="@dimen/_24sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="USER AUTHENTICA"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_signup"
            android:layout_marginBottom="@dimen/_4sdp"
            android:backgroundTint="@color/black"
            android:padding="@dimen/_10sdp"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textSize="@dimen/_14sdp"
            app:cornerRadius="@dimen/_8sdp" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_70sdp"
            android:backgroundTint="@color/white"
            android:padding="@dimen/_10sdp"
            android:text="@string/sign_up"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            app:cornerRadius="@dimen/_8sdp" />


    </RelativeLayout>
</layout>